<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="SWOP.MainWindow"
        Title="MainWindow" Width="800" Height="600"
        Loaded="MainWindow_Loaded" Background="#FF141019"
    >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="36px"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80px"/>
        </Grid.RowDefinitions>
        <!-- Top header -->
        <Grid Grid.Row="0">
			<Grid.RowDefinitions>
				<RowDefinition Height="30px"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition Width="200px"/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<Border Grid.ColumnSpan="3" Background="#FF2B3240"/>
			
			<Label Name="lblNbTurn" Content="Turn  */*" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" FontSize="16" Foreground="#FFD48230" FontWeight="Bold" Margin="0,-2,0,0"/>
			<Button Content="Menu" HorizontalAlignment="Right" Grid.Column="1" Margin="0,5,0,5" VerticalAlignment="Top" Width="62" Click="ButtonMenu_Click" Background="#FFBF8850"/>
			<Border Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="1" Background="#FF786752"/>

			<Label Name="lblPlayer1Name" Content="Player1Name" Grid.Column="0" Foreground="#FF3E62FF" Margin="10,0,0,0"/>
			<Border Name="borderPlayer1" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="1" Background="#FF2C48C3" Visibility="Hidden"/>

			<Label Name="lblPlayer2Name" Content="Player2Name" Grid.Column="2" Foreground="#FFD83626" HorizontalAlignment="Right" Margin="0,0,10,0"/>
			<Border Name="borderPlayer2" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="1" Background="#FFA62D1A" Visibility="Hidden"/>
		</Grid>
        <!-- Main grid -->
        <Grid x:Name="mapGrid" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1"/>
        <!-- Pause menu -->
        <Canvas Name="mainMenu" Width="150" Height="180" Grid.Row="1" Margin="321,79,321,191" Visibility="Hidden">
            <Rectangle Stroke="#FFBF8850" Fill="#FF1C2427" Width="150" Height="180"/>
            <Button Content="Resume" Width="100" Click="ButtonResume_Click" Canvas.Left="25" Canvas.Top="30" Background="#FFBF8850"/>
            <Button Content="Reload(tmp)" Width="100" Click="ButtonReload_Click" Canvas.Left="25" Canvas.Top="80" Background="#FFBF8850"/>
            <Button Content="Go to main menu" Width="100" Click="ButtonResume_Click" Canvas.Left="25" Canvas.Top="130" Background="#FFBF8850"/>
        </Canvas>
        <!-- Bottom footer -->
        <Button Content="End your turn" HorizontalAlignment="Right" Margin="0,20,10,0" Grid.Row="2" VerticalAlignment="Top" Width="120" Height="38" Click="ButtonNextPlayer_Click"/>
    </Grid>
</Window>
